{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "command.schema.json",
  "title": "Instagram commands",
  "description": "Describes command entities for instagram service",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "CREATE_USER"
        },
        "login": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "login",
        "password"
      ]
    },
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "FOLLOW"
        },
        "follower_id": {
          "type": "integer"
        },
        "following_id": {
          "type": "integer"
        }
      },
      "required": [
        "follower_id",
        "following_id"
      ]
    },
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "ADD_POST"
        },
        "author_id": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "image": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "required": [
        "author_id",
        "image"
      ]
    },
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "ADD_COMMENT"
        },
        "author_id": {
          "type": "integer"
        },
        "post_id": {
          "type": "integer"
        },
        "content": {
          "type": "string"
        }
      },
      "required": [
        "author_id",
        "post_id",
        "content"
      ]
    },
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "LIKE_POST"
        },
        "author_id": {
          "type": "integer"
        },
        "post_id": {
          "type": "integer"
        }
      },
      "required": [
        "author_id",
        "post_id"
      ]
    },
    {
      "type": "object",
      "properties": {
        "op_type": {
          "const": "LIKE_COMMENT"
        },
        "author_id": {
          "type": "integer"
        },
        "comment_id": {
          "type": "integer"
        }
      },
      "required": [
        "author_id",
        "comment_id"
      ]
    }
  ]
}